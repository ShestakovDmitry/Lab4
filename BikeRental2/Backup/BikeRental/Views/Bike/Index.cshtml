@model IEnumerable<BikeRental.Models.Bike>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

<table>
    <tr>
        <th>Id</th>
        <th>Model</th>
        <th>Orders</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.Id.ToString()</td>
        <td>@item.Model</td>
        <td>@(item.Orders == null ? "None" : item.Orders.Count.ToString())</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


